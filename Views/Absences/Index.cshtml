@model IEnumerable<GRP7_GestionEcole.Models.ENTITIES.Absence>

@{
    ViewData["Title"] = "Index";
}

<h1>Ajouter les heures d'absence</h1>

<p>
    <a asp-action="Create">Ajouter heure</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomAbsent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateAbsence)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MotifAbsent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreHeureAbsence)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomAbsent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateAbsence)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MotifAbsent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreHeureAbsence)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AbsenceID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AbsenceID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AbsenceID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
