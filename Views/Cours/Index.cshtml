@model IEnumerable<GRP7_GestionEcole.Models.ENTITIES.Cours>

@{
    ViewData["Title"] = "Index";
}

<h1>Ajouter un cours</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomCours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreHeureCours)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomCours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreHeureCours)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IDCours">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IDCours">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IDCours">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
